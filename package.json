{
	"name": "app",
	"private": true,
	"version": "0.0.1",
	"description": "Dev Protocol Apps",
	"scripts": {
		"start": "parcel serve public/index.html --no-source-maps",
		"test": "tsc && ava",
		"lint": "yarn lint:eslint && yarn lint:format",
		"lint:eslint": "eslint . --ext .ts,.js --fix --ignore-pattern node_modules/ --ignore-pattern dist/",
		"lint:format": "prettier --write '**/*.{html,js,json,md,yml}'",
		"build": "parcel build public/index.html --no-source-maps",
		"prebuild": "rimraf ./dist"
	},
	"license": "MPL-2.0",
	"dependencies": {
		"@devprtcl/dev-kit-js": "1.0.2",
		"bignumber.js": "9.0.1",
		"date-fns": "2.16.1",
		"lit-html": "1.2.1",
		"lit-style": "1.1.4",
		"postcss-nesting": "7.0.1",
		"query-selector-shadow-dom": "0.8.0",
		"rxjs": "6.6.0",
		"ullr": "0.15.2",
		"web3": "1.3.0"
	},
	"devDependencies": {
		"@babel/helper-compilation-targets": "7.12.5",
		"@types/dotenv": "8.2.0",
		"@types/node": "14.14.7",
		"@typescript-eslint/eslint-plugin": "3.10.1",
		"@typescript-eslint/parser": "3.10.1",
		"ava": "3.13.0",
		"browser-env": "3.3.0",
		"dotenv": "8.2.0",
		"eslint": "7.13.0",
		"eslint-config-prettier": "6.15.0",
		"eslint-config-xo": "0.33.1",
		"eslint-config-xo-typescript": "0.32.0",
		"eslint-plugin-prettier": "3.1.4",
		"esm": "3.2.25",
		"husky": "4.3.0",
		"parcel": "1.12.4",
		"parcel-plugin-static-files-copy": "2.5.0",
		"prettier": "2.1.2",
		"rimraf": "3.0.2",
		"typescript": "3.9.7"
	},
	"staticFiles": {
		"staticPath": "public",
		"watcherGlob": "**"
	},
	"browserslist": [
		"last 2 chrome versions"
	],
	"ava": {
		"files": [
			"**/*.test.js"
		],
		"require": [
			"esm",
			"./dist/lib/test/setup-browser-env.js"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "yarn lint"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dev-protocol/app.git"
	},
	"bugs": {
		"url": "https://github.com/dev-protocol/app/issues"
	},
	"homepage": "https://github.com/dev-protocol/app#readme"
}
