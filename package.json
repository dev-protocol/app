{
	"name": "app",
	"private": true,
	"version": "0.0.1",
	"description": "Dev Protocol Apps",
	"scripts": {
		"start": "parcel serve public/index.html --no-source-maps",
		"test": "tsc && ava",
		"lint": "npm run lint:eslint && npm run lint:format",
		"lint:eslint": "eslint . --ext .ts,.js --fix --ignore-pattern node_modules/ --ignore-pattern dist/",
		"lint:format": "prettier --write '**/*.{html,js,json,md,yml}'",
		"build": "parcel build public/index.html --no-source-maps",
		"prebuild": "rimraf ./dist"
	},
	"license": "MPL-2.0",
	"dependencies": {
		"@aggre/ullr": "^0.15.0",
		"@dev-protocol/dev-kit-js": "^0.4.0",
		"bignumber.js": "9.0.0",
		"date-fns": "2.14.0",
		"lit-html": "1.2.1",
		"lit-style": "1.1.4",
		"postcss-nesting": "7.0.1",
		"query-selector-shadow-dom": "0.4.6",
		"rxjs": "6.5.5",
		"web3": "1.2.8"
	},
	"devDependencies": {
		"@types/dotenv": "8.2.0",
		"@types/node": "13.13.8",
		"@typescript-eslint/eslint-plugin": "2.30.0",
		"@typescript-eslint/parser": "2.30.0",
		"ava": "3.8.2",
		"browser-env": "3.3.0",
		"dotenv": "8.2.0",
		"eslint": "7.0.0",
		"eslint-config-prettier": "6.11.0",
		"eslint-config-xo": "0.29.1",
		"eslint-config-xo-typescript": "0.29.0",
		"eslint-plugin-prettier": "3.1.3",
		"esm": "3.2.25",
		"husky": "4.2.5",
		"parcel": "1.12.4",
		"parcel-plugin-static-files-copy": "2.3.1",
		"prettier": "2.0.5",
		"puppeteer": "3.1.0",
		"rimraf": "3.0.2",
		"typescript": "3.9.3"
	},
	"staticFiles": {
		"staticPath": "public",
		"watcherGlob": "**"
	},
	"browserslist": [
		"last 2 chrome versions"
	],
	"ava": {
		"files": [
			"**/*.test.js"
		],
		"require": [
			"esm",
			"./dist/lib/test/setup-browser-env.js"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dev-protocol/app.git"
	},
	"bugs": {
		"url": "https://github.com/dev-protocol/app/issues"
	},
	"homepage": "https://github.com/dev-protocol/app#readme"
}
